/* 页面容器 */
.container {
  padding: 0 0 40rpx;
  background-color: #F5F7FA;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  background-color: #3D5AFE;
  padding: calc(60rpx + var(--safe-area-inset-top)) 40rpx 40rpx;
  color: #FFFFFF;
  position: relative;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 16rpx rgba(61, 90, 254, 0.15);
  width: 100%;
  box-sizing: border-box;
}

.header-content {
  position: relative;
  z-index: 2;
  width: 100%;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  max-width: 80%;
}

.page-header::after {
  content: "";
  position: absolute;
  right: -100rpx;
  top: -100rpx;
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  z-index: 1;
}

.page-header::before {
  content: "";
  position: absolute;
  left: -50rpx;
  bottom: -80rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.08);
  z-index: 1;
}

/* 分类导航 */
.category-nav {
  background-color: #FFFFFF;
  padding: 10rpx 0;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
  position: sticky;
  top: 0;
  z-index: 100;
}

.category-scroll {
  white-space: nowrap;
  padding: 20rpx 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.category-item {
  display: inline-block;
  padding: 16rpx 30rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
  border-radius: 8rpx;
}

.category-item.active {
  color: #3D5AFE;
  font-weight: bold;
}

.category-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #3D5AFE;
  border-radius: 3rpx;
}

.category-item-hover {
  background-color: rgba(0, 0, 0, 0.05);
}

/* 案例列表 */
.case-list {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.case-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
  overflow: hidden;
  transition: all 0.3s;
  width: 100%;
  box-sizing: border-box;
}

.case-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.case-image {
  width: 100%;
  height: 320rpx;
  object-fit: cover;
}

.case-content {
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.case-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.case-client {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.client-label {
  color: #999;
}

.case-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.case-tag {
  font-size: 24rpx;
  color: #3D5AFE;
  background-color: rgba(61, 90, 254, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
  margin-bottom: 10rpx;
}

.case-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
  text-align: justify;
}

.case-results {
  background-color: #F9F9F9;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.results-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.results-list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  box-sizing: border-box;
}

.result-item {
  width: 50%;
  display: flex;
  align-items: flex-start;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  padding-right: 10rpx;
  box-sizing: border-box;
}

.result-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #3D5AFE;
  margin-right: 12rpx;
  margin-top: 8rpx;
  flex-shrink: 0;
}

.case-action {
  display: flex;
  justify-content: flex-end;
  width: 100%;
  box-sizing: border-box;
}

.view-detail {
  color: #3D5AFE;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.view-detail::after {
  content: "";
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #3D5AFE;
  border-right: 2rpx solid #3D5AFE;
  transform: rotate(45deg);
  margin-left: 10rpx;
}

/* 合作客户 */
.clients-section {
  background-color: #FFFFFF;
  padding: 40rpx 30rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
  position: relative;
}

.section-title::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: -16rpx;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #3D5AFE;
  border-radius: 3rpx;
}

.clients-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
}

.client-logo-item {
  width: 30%;
  height: 150rpx;
  margin-bottom: 30rpx;
  background-color: #FFFFFF;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.client-logo {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* 联系我们 */
.contact-section {
  background-color: #FFFFFF;
  padding: 40rpx 30rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.contact-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: center;
  margin-bottom: 40rpx;
}

.contact-button {
  background-color: #3D5AFE;
  color: #FFFFFF;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
  width: 80%;
  margin: 0 auto;
}

.contact-button:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 小屏幕适配 */
@media screen and (max-width: 375px) {
  .result-item {
    width: 100%;
  }
  
  .client-logo-item {
    width: 48%;
  }
  
  .header-title {
    font-size: 36rpx;
  }
  
  .header-subtitle {
    font-size: 26rpx;
  }
  
  .case-title {
    font-size: 32rpx;
  }
  
  .section-title {
    font-size: 32rpx;
  }
  
  .case-image {
    height: 260rpx;
  }
  
  .contact-button {
    width: 100%;
  }
} 