.container {
  padding: 30rpx;
  background-color: #f6f7fb;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  background-color: #2b5cff;
  color: #fff;
  padding: calc(40rpx + var(--safe-area-inset-top)) 30rpx 40rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(43, 92, 255, 0.2);
  width: 100%;
  box-sizing: border-box;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.8;
  max-width: 85%;
}

/* 通用区块样式 */
.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  width: 8rpx;
  height: 36rpx;
  background-color: #2b5cff;
  border-radius: 4rpx;
}

/* 公司介绍部分 */
.company-basic {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
  width: 100%;
  box-sizing: border-box;
}

.logo-container {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.company-logo {
  width: 180rpx;
  height: 180rpx;
}

.company-details {
  flex: 1;
  min-width: 250rpx;
}

.info-item {
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.label {
  color: #666;
  margin-right: 10rpx;
}

.value {
  color: #333;
  font-weight: 500;
}

/* 使命愿景部分 */
.mission-vision {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.mission, .vision {
  background-color: #f8f9ff;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 8rpx solid #2b5cff;
  width: 100%;
  box-sizing: border-box;
}

.mv-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2b5cff;
  margin-bottom: 10rpx;
}

.mv-content {
  font-size: 28rpx;
  color: #444;
  line-height: 1.6;
}

/* 核心价值观部分 */
.values-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.values-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.value-item {
  display: flex;
  align-items: flex-start;
  background-color: #f8f9ff;
  padding: 20rpx;
  border-radius: 12rpx;
  width: 100%;
  box-sizing: border-box;
}

.value-icon {
  margin-right: 15rpx;
  color: #2b5cff;
  font-size: 36rpx;
  flex-shrink: 0;
}

.value-text {
  flex: 1;
  font-size: 28rpx;
  color: #444;
  line-height: 1.5;
}

/* 发展历程部分 */
.timeline {
  position: relative;
  padding-left: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.timeline::before {
  content: "";
  position: absolute;
  left: 5rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background-color: #e0e0e0;
}

.timeline-item {
  position: relative;
  padding-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.timeline-year {
  font-size: 30rpx;
  font-weight: bold;
  color: #2b5cff;
  margin-bottom: 10rpx;
}

.timeline-content {
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.timeline-dot {
  position: absolute;
  left: -35rpx;
  top: 15rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #2b5cff;
  z-index: 1;
}

.timeline-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.timeline-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 团队介绍部分 */
.team-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.team-member {
  display: flex;
  background-color: #f8f9ff;
  padding: 20rpx;
  border-radius: 12rpx;
  width: 100%;
  box-sizing: border-box;
}

.member-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
  border: 2rpx solid #eaeaea;
  flex-shrink: 0;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.member-title {
  font-size: 24rpx;
  color: #2b5cff;
  margin-bottom: 10rpx;
  background-color: rgba(43, 92, 255, 0.1);
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.member-bio {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 资质认证部分 */
.certifications {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.cert-item {
  width: calc(33.33% - 14rpx);
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  background-color: #fff;
  box-sizing: border-box;
}

.cert-image {
  width: 100%;
  height: 180rpx;
  object-fit: cover;
}

.cert-title {
  font-size: 24rpx;
  color: #333;
  padding: 12rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 合作伙伴部分 */
.partners {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.partner-item {
  width: 30%;
  height: 120rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.partner-logo {
  max-width: 90%;
  max-height: 90%;
  object-fit: contain;
}

/* 联系方式部分 */
.contact-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.contact-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.contact-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.contact-map {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
  overflow: hidden;
}

/* 底部部分 */
.footer {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 40rpx;
  padding: 30rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.copyright {
  margin-bottom: 10rpx;
}

/* 小屏幕适配 */
@media screen and (max-width: 375px) {
  .company-basic {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .logo-container {
    margin-bottom: 20rpx;
  }
  
  .cert-item {
    width: calc(50% - 10rpx);
  }
  
  .partner-item {
    width: 48%;
  }
  
  .title {
    font-size: 38rpx;
  }
  
  .section-title {
    font-size: 32rpx;
  }
  
  .section-title::before {
    height: 32rpx;
  }
  
  .member-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
  }
  
  .member-name {
    font-size: 28rpx;
  }
  
  .member-title {
    font-size: 22rpx;
  }
  
  .contact-map {
    height: 320rpx;
  }
} 