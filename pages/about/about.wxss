.container {
  padding: 30rpx;
  background-color: #f6f7fb;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  background-color: #2b5cff;
  color: #fff;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(43, 92, 255, 0.2);
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 通用区块样式 */
.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  width: 8rpx;
  height: 36rpx;
  background-color: #2b5cff;
  border-radius: 4rpx;
}

/* 公司介绍部分 */
.company-basic {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.logo-container {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.company-logo {
  width: 180rpx;
  height: 180rpx;
}

.company-details {
  flex: 1;
}

.info-item {
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.label {
  color: #666;
  margin-right: 10rpx;
}

.value {
  color: #333;
  font-weight: 500;
}

/* 使命愿景部分 */
.mission-vision {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.mission, .vision {
  background-color: #f8f9ff;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 8rpx solid #2b5cff;
}

.mv-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2b5cff;
  margin-bottom: 10rpx;
}

.mv-content {
  font-size: 28rpx;
  color: #444;
  line-height: 1.6;
}

/* 核心价值观部分 */
.values-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.values-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.value-item {
  display: flex;
  align-items: flex-start;
  background-color: #f8f9ff;
  padding: 20rpx;
  border-radius: 12rpx;
}

.value-icon {
  margin-right: 15rpx;
  color: #2b5cff;
  font-size: 36rpx;
}

.value-text {
  flex: 1;
  font-size: 28rpx;
  color: #444;
  line-height: 1.5;
}

/* 发展历程部分 */
.timeline {
  position: relative;
  padding-left: 30rpx;
}

.timeline::before {
  content: "";
  position: absolute;
  left: 5rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background-color: #e0e0e0;
}

.timeline-item {
  position: relative;
  padding-bottom: 40rpx;
}

.timeline-year {
  font-size: 30rpx;
  font-weight: bold;
  color: #2b5cff;
  margin-bottom: 10rpx;
}

.timeline-content {
  position: relative;
}

.timeline-dot {
  position: absolute;
  left: -35rpx;
  top: 15rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #2b5cff;
  z-index: 1;
}

.timeline-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.timeline-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 团队介绍部分 */
.team-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.team-member {
  display: flex;
  background-color: #f8f9ff;
  padding: 20rpx;
  border-radius: 12rpx;
}

.member-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
  border: 2rpx solid #eaeaea;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.member-title {
  font-size: 26rpx;
  color: #2b5cff;
  margin-bottom: 10rpx;
}

.member-background {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 荣誉资质部分 */
.honors-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.honor-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9ff;
  border-radius: 12rpx;
}

.honor-icon {
  margin-right: 20rpx;
  color: #ffc107;
  font-size: 44rpx;
}

.honor-details {
  flex: 1;
}

.honor-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 5rpx;
}

.honor-year {
  font-size: 24rpx;
  color: #666;
}

/* 联系我们部分 */
.contact-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.contact-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9ff;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.contact-item:active {
  background-color: #e8eaff;
}

.contact-icon {
  margin-right: 20rpx;
  color: #2b5cff;
  font-size: 40rpx;
}

.contact-info {
  flex: 1;
}

.contact-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 适配小屏幕设备 */
@media screen and (max-width: 375px) {
  .company-basic {
    flex-direction: column;
  }
  
  .logo-container {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .team-member {
    flex-direction: column;
  }
  
  .member-avatar {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
} 