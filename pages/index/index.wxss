/* 添加字体图标 */
@font-face {
  font-family: 'iconfont';
  src: url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 28rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  margin-right: 6rpx;
  display: inline-block;
}

.icon-star:before {
  content: "\e61a";
  color: #FF9500;
}

.icon-user:before {
  content: "\e60a";
  color: #8E8E93;
}

.icon-teacher:before {
  content: "\e602";
  color: #8E8E93;
}

/* 动画过渡 */
.fade-in {
  animation: fadeIn 0.3s ease-in forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.scale-in {
  animation: scaleIn 0.2s ease-out forwards;
}

@keyframes scaleIn {
  from {
    transform: scale(0.9);
    opacity: 0.5;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* 页面容器 */
.container {
  padding: 0 0 20rpx 0;
  background-color: #F5F7FA;
}

/* 搜索框 */
.search-container {
  padding: 20rpx 30rpx;
  background-color: #3D5AFE;
  box-shadow: 0 4rpx 20rpx rgba(61, 90, 254, 0.2);
}

.search-box {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  transition: all 0.3s;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-box-hover {
  background-color: rgba(255, 255, 255, 1);
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-placeholder {
  color: #8E8E93;
  font-size: 28rpx;
  margin-left: 16rpx;
}

/* 轮播图 */
.swiper-container {
  width: 100%;
  height: 380rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

swiper {
  width: 100%;
  height: 100%;
  border-radius: 0 0 16rpx 16rpx;
  overflow: hidden;
}

.swiper-item {
  transition: all 0.3s;
}

.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  transform: scale(0.95);
  transition: all 0.3s;
}

.swiper-item.active .swiper-image {
  transform: scale(1);
}

.swiper-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
  color: #ffffff;
  padding: 30rpx;
  font-size: 30rpx;
  line-height: 1.5;
  font-weight: 500;
  border-radius: 0 0 16rpx 16rpx;
}

/* 快速入口 */
.quick-entry {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx 30rpx;
  background-color: #FFFFFF;
  margin: 0 24rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  transition: all 0.3s;
}

.entry-item:active {
  transform: scale(0.9);
}

.entry-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.entry-icon::before {
  content: "";
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  background-size: cover;
  background-position: center;
}

.entry-icon-all {
  background: linear-gradient(135deg, #3D5AFE, #651FFF);
}

