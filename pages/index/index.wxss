/* 添加字体图标 */
@font-face {
  font-family: 'iconfont';
  src: url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 28rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  margin-right: 6rpx;
  display: inline-block;
}

.icon-star:before {
  content: "\e61a";
  color: #FF9500;
}

.icon-user:before {
  content: "\e60a";
  color: #8E8E93;
}

.icon-teacher:before {
  content: "\e602";
  color: #8E8E93;
}

.icon-phone:before {
  content: "\e600";
  color: #3D5AFE;
}

.icon-email:before {
  content: "\e603";
  color: #3D5AFE;
}

.icon-address:before {
  content: "\e604";
  color: #3D5AFE;
}

/* 动画过渡 */
.fade-in {
  animation: fadeIn 0.3s ease-in forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.scale-in {
  animation: scaleIn 0.2s ease-out forwards;
}

@keyframes scaleIn {
  from {
    transform: scale(0.9);
    opacity: 0.5;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* 全局响应式调整 */
page {
  --safe-area-inset-top: env(safe-area-inset-top);
  --safe-area-inset-bottom: env(safe-area-inset-bottom);
  font-size: calc(14px + 0.1vmin);
  box-sizing: border-box;
}

/* 页面容器 */
.container {
  padding: 0 0 calc(20rpx + var(--safe-area-inset-bottom));
  background-color: #F5F7FA;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 搜索框 */
.search-container {
  padding: calc(20rpx + var(--safe-area-inset-top)) calc(30rpx + 1vmin);
  background-color: #3D5AFE;
  box-shadow: 0 4rpx 20rpx rgba(61, 90, 254, 0.2);
}

.search-box {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  height: calc(80rpx + 1vmin);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  transition: all 0.3s;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-box-hover {
  background-color: rgba(255, 255, 255, 1);
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-placeholder {
  color: #8E8E93;
  font-size: calc(28rpx + 0.1vmin);
  margin-left: 16rpx;
}

/* 轮播图 */
.swiper-container {
  width: 100%;
  height: calc(350rpx + 3vmin);
  margin-bottom: calc(24rpx + 1vmin);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

swiper {
  width: 100%;
  height: 100%;
  border-radius: 0 0 16rpx 16rpx;
  overflow: hidden;
}

.swiper-item {
  transition: all 0.3s;
}

.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  transform: scale(0.95);
  transition: all 0.3s;
}

.swiper-item.active .swiper-image {
  transform: scale(1);
}

.swiper-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
  color: #ffffff;
  padding: calc(30rpx + 1vmin);
  font-size: calc(30rpx + 0.2vmin);
  line-height: 1.5;
  font-weight: 500;
  border-radius: 0 0 16rpx 16rpx;
}

/* 公司简介 */
.company-info {
  background-color: #FFFFFF;
  margin: 0 calc(24rpx + 0.5vmin) calc(24rpx + 1vmin);
  border-radius: 16rpx;
  padding: calc(20rpx + 0.5vmin);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

.company-desc {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.company-logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin: 0 auto 30rpx;
}

.company-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  text-align: justify;
}

.company-highlights {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.highlight-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
}

.highlight-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #3D5AFE;
  margin-bottom: 10rpx;
}

.highlight-text {
  font-size: 24rpx;
  color: #666;
}

/* 核心优势 */
.section {
  background-color: #FFFFFF;
  margin: 0 calc(24rpx + 0.5vmin) calc(24rpx + 1vmin);
  border-radius: 16rpx;
  padding: calc(20rpx + 0.5vmin);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #F2F2F7;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background-color: #3D5AFE;
  border-radius: 3rpx;
}

.section-more {
  font-size: 24rpx;
  color: #3D5AFE;
}

.section-more-hover {
  opacity: 0.8;
}

.advantage-list {
  padding: 20rpx;
}

.advantage-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.advantage-item:last-child {
  margin-bottom: 0;
}

.advantage-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.advantage-info {
  flex: 1;
}

.advantage-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.advantage-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 服务项目 */
.service-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
}

.service-card {
  width: 48%;
  background-color: #F9F9F9;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.service-card-hover {
  transform: translateY(-6rpx);
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}

.service-image {
  width: 100%;
  height: 180rpx;
}

.service-info {
  padding: 15rpx;
}

.service-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.service-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 成功案例 */
.case-list {
  padding: 20rpx;
}

.case-item {
  display: flex;
  margin-bottom: 30rpx;
  background-color: #F9F9F9;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.case-item-hover {
  transform: translateY(-6rpx);
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}

.case-image {
  width: 220rpx;
  height: 160rpx;
  flex-shrink: 0;
}

.case-info {
  padding: 15rpx;
  flex: 1;
}

.case-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.case-client {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.case-tags {
  display: flex;
  flex-wrap: wrap;
}

.case-tag {
  font-size: 20rpx;
  color: #3D5AFE;
  background-color: rgba(61, 90, 254, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
}

/* 合作伙伴 */
.partner-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
}

.partner-logo {
  width: 30%;
  height: 80rpx;
  margin-bottom: 20rpx;
  object-fit: contain;
}

/* 联系我们 */
.contact-section {
  background-color: #FFFFFF;
  margin: 0 calc(24rpx + 0.5vmin) calc(24rpx + 1vmin);
  border-radius: 16rpx;
  padding: calc(20rpx + 0.5vmin);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

.contact-info {
  padding: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.contact-map {
  margin-top: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 底部版权 */
.footer {
  padding: 30rpx 0;
  text-align: center;
}

.copyright {
  font-size: 24rpx;
  color: #8E8E93;
} 