/* 添加字体图标 */
@font-face {
  font-family: 'iconfont';
  src: url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 28rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  margin-right: 6rpx;
  display: inline-block;
}

.icon-star:before {
  content: "\e61a";
  color: #FF9500;
}

.icon-user:before {
  content: "\e60a";
  color: #8E8E93;
}

.icon-teacher:before {
  content: "\e602";
  color: #8E8E93;
}

.icon-phone:before {
  content: "\e600";
  color: #3D5AFE;
}

.icon-email:before {
  content: "\e603";
  color: #3D5AFE;
}

.icon-address:before {
  content: "\e604";
  color: #3D5AFE;
}

/* 动画过渡 */
.fade-in {
  animation: fadeIn 0.3s ease-in forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.scale-in {
  animation: scaleIn 0.2s ease-out forwards;
}

@keyframes scaleIn {
  from {
    transform: scale(0.9);
    opacity: 0.5;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* 全局响应式调整 */
page {
  --safe-area-inset-top: env(safe-area-inset-top);
  --safe-area-inset-bottom: env(safe-area-inset-bottom);
  font-size: calc(14px + 0.1vmin);
  box-sizing: border-box;
}

/* 页面容器 */
.container {
  padding: 0 0 calc(20rpx + var(--safe-area-inset-bottom));
  background-color: #F5F7FA;
  min-height: 100vh;
  box-sizing: border-box;
  width: 100%;
}

/* 搜索框 */
.search-container {
  padding: calc(20rpx + var(--safe-area-inset-top)) calc(30rpx + 1vmin);
  background-color: #3D5AFE;
  box-shadow: 0 4rpx 20rpx rgba(61, 90, 254, 0.2);
  width: 100%;
  box-sizing: border-box;
}

.search-box {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  height: calc(80rpx + 1vmin);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  transition: all 0.3s;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-box-hover {
  background-color: rgba(255, 255, 255, 1);
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-placeholder {
  color: #8E8E93;
  font-size: calc(28rpx + 0.1vmin);
  margin-left: 16rpx;
}

/* 轮播图 */
.swiper-container {
  width: 100%;
  height: calc(350rpx + 3vmin);
  margin-bottom: calc(24rpx + 1vmin);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

swiper {
  width: 100%;
  height: 100%;
  border-radius: 0 0 16rpx 16rpx;
  overflow: hidden;
}

.swiper-item {
  transition: all 0.3s;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 0;
  transition: all 0.3s;
}

.swiper-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  color: #ffffff;
  padding: calc(30rpx + 1vmin);
  font-size: calc(30rpx + 0.2vmin);
  line-height: 1.5;
  font-weight: 500;
  border-radius: 0 0 16rpx 16rpx;
}

/* 公司简介 */
.company-info {
  background-color: #FFFFFF;
  margin: 0 calc(24rpx + 0.5vmin) calc(24rpx + 1vmin);
  border-radius: 16rpx;
  padding: calc(20rpx + 0.5vmin);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
  width: calc(100% - 48rpx - 1vmin);
  box-sizing: border-box;
}

.company-desc {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.company-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  margin: 0 auto 30rpx;
}

.company-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  text-align: justify;
}

.company-highlights {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 40rpx;
  width: 100%;
}

.highlight-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.highlight-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #3D5AFE;
  margin-bottom: 10rpx;
}

.highlight-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 核心优势 */
.section {
  background-color: #FFFFFF;
  margin: 0 calc(24rpx + 0.5vmin) calc(24rpx + 1vmin);
  border-radius: 16rpx;
  padding: calc(20rpx + 0.5vmin);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
  width: calc(100% - 48rpx - 1vmin);
  box-sizing: border-box;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #F2F2F7;
  width: 100%;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background-color: #3D5AFE;
  border-radius: 3rpx;
}

.section-more {
  font-size: 26rpx;
  color: #8E8E93;
}

/* 核心优势列表 */
.advantages-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
}

.advantage-item {
  width: 50%;
  box-sizing: border-box;
  padding: 10rpx;
}

.advantage-content {
  background-color: #F5F7FA;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s;
  height: 100%;
  box-sizing: border-box;
}

.advantage-content:active {
  transform: scale(0.98);
  background-color: #EEF0F6;
}

.advantage-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
}

.advantage-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  text-align: center;
}

.advantage-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  text-align: center;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 服务项目列表 */
.services-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
}

.service-item {
  width: 50%;
  box-sizing: border-box;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.service-content {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.service-content:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.service-image {
  width: 100%;
  height: 180rpx;
  background-color: #F5F7FA;
}

.service-info {
  padding: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.service-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.service-brief {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  flex: 1;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 案例列表 */
.cases-list {
  padding: 20rpx 0;
}

.case-item {
  margin-bottom: 30rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.case-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.case-cover {
  width: 100%;
  height: 200rpx;
  background-color: #F5F7FA;
}

.case-info {
  padding: 20rpx;
}

.case-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.case-meta {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
  align-items: center;
}

.case-client {
  font-size: 24rpx;
  color: #8E8E93;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.case-tags {
  display: flex;
  flex-wrap: wrap;
}

.case-tag {
  font-size: 22rpx;
  color: #3D5AFE;
  background-color: rgba(61, 90, 254, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

/* 合作伙伴 */
.partners-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
}

.partner-item {
  width: 33.33%;
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}

.partner-logo {
  width: 90%;
  height: 100rpx;
  border-radius: 8rpx;
  background-color: #F5F7FA;
  padding: 10rpx;
  box-sizing: border-box;
}

/* 联系信息 */
.contact-section {
  background-color: #FFFFFF;
  margin: 0 calc(24rpx + 0.5vmin) calc(24rpx + 1vmin);
  border-radius: 16rpx;
  padding: calc(20rpx + 0.5vmin);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

.contact-list {
  padding: 20rpx 0;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F2F2F7;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-icon {
  width: 40rpx;
  text-align: center;
  margin-right: 20rpx;
}

.contact-text {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.map-container {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

/* 底部版权 */
.footer {
  text-align: center;
  padding: 40rpx 0;
  color: #8E8E93;
  font-size: 24rpx;
}

/* 小屏幕适配 */
@media screen and (max-width: 375px) {
  .advantage-item, .service-item {
    width: 100%;
  }
  
  .partner-item {
    width: 50%;
  }
  
  .swiper-container {
    height: calc(300rpx + 3vmin);
  }
  
  .company-logo {
    width: 120rpx;
    height: 120rpx;
  }
  
  .section-title {
    font-size: 28rpx;
  }
  
  .advantage-icon {
    width: 80rpx;
    height: 80rpx;
  }
  
  .advantage-title {
    font-size: 26rpx;
  }
  
  .highlight-item {
    width: 50%;
  }
} 