.entry-icon-free {
  background: linear-gradient(135deg, #34C759, #30B7FF);
}

.entry-icon-free::before {
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><path d="M8 14s1.5 2 4 2 4-2 4-2"></path><line x1="9" y1="9" x2="9.01" y2="9"></line><line x1="15" y1="9" x2="15.01" y2="9"></line></svg>');
}

.entry-icon-rank {
  background: linear-gradient(135deg, #AF52DE, #FF2D55);
}

.entry-icon-rank::before {
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"></line><line x1="12" y1="20" x2="12" y2="4"></line><line x1="6" y1="20" x2="6" y2="14"></line></svg>');
}

.entry-text {
  font-size: 24rpx;
  color: #333333;
  font-weight: 500;
}

/* 分类导航 */
.category-nav {
  background-color: #ffffff;
  padding: 0 0 10rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
  margin-top: 0;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  border-bottom: 1rpx solid #F0F0F5;
}

.category-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  padding: 24rpx 36rpx;
  font-size: 28rpx;
  color: #666666;
  position: relative;
  transition: all 0.3s;
}

.category-item-hover {
  opacity: 0.8;
  transform: scale(0.95);
}

.category-item.active {
  color: #3D5AFE;
  font-weight: 600;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background-color: #3D5AFE;
  border-radius: 3rpx;
}

/* 课程列表 */
.course-list {
  padding: 24rpx;
}

.course-item {
  margin-bottom: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
  position: relative;
}

.course-item-hover, .course-card-hover {
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.04);
}

.course-item-image {
  width: 100%;
  height: 320rpx;
}

.course-item-info {
  padding: 24rpx;
}

.course-item-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  line-height: 1.5;
  color: #333333;
}

.course-item-summary {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.course-item-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #8E8E93;
}

.meta-item {
  display: flex;
  align-items: center;
}

.course-item-instructor, .instructor {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.course-item-rating, .rating {
  color: #FF9500;
  font-weight: 600;
  display: flex;
  align-items: center;
}

.course-item-students, .students {
  display: flex;
  align-items: center;
}

.course-item-price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #F0F0F5;
  padding-top: 16rpx;
  margin-top: 8rpx;
}

.price-box {
  display: flex;
  align-items: center;
}

.course-item-price, .course-price {
  color: #FF3B30;
  font-size: 40rpx;
  font-weight: bold;
}

.course-item-original, .course-original-price {
  color: #8E8E93;
  font-size: 24rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.course-item-free, .course-free-tag {
  color: #34C759;
  font-size: 36rpx;
  font-weight: 600;
}

.course-item-cart {
  background-color: #3D5AFE;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  box-shadow: 0 4rpx 10rpx rgba(61, 90, 254, 0.3);
  transition: all 0.3s;
}

.cart-btn-hover {
  transform: scale(0.9);
  background-color: #335EFC;
}

/* 章节样式 */
.section {
  background-color: #ffffff;
  padding: 24rpx;
  margin: 0 24rpx 24rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  position: relative;
  padding-left: 24rpx;
  color: #333333;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 34rpx;
  background-color: #3D5AFE;
  border-radius: 4rpx;
}

.section-more {
  font-size: 26rpx;
  color: #8E8E93;
  display: flex;
  align-items: center;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.section-more-hover {
  background-color: #F0F0F5;
  color: #3D5AFE;
}

.section-more::after {
  content: '';
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #8E8E93;
  border-right: 2rpx solid #8E8E93;
  transform: rotate(45deg);
  margin-left: 6rpx;
  transition: all 0.3s;
}

.section-more-hover::after {
  border-color: #3D5AFE;
  transform: rotate(45deg) scale(0.8);
}

/* 课程网格 */
.course-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.course-card {
  width: calc(50% - 20rpx);
  margin: 0 10rpx 20rpx 10rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
  position: relative;
}

.course-image {
  width: 100%;
  height: 200rpx;
}

.hot-tag, .free-tag {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: linear-gradient(135deg, #FF3B30, #FF9500);
  color: white;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(255, 59, 48, 0.3);
  font-weight: 500;
}

.free-tag {
  background: linear-gradient(135deg, #34C759, #30B7FF);
  box-shadow: 0 4rpx 8rpx rgba(52, 199, 89, 0.3);
}

.course-info {
  padding: 16rpx;
}

.course-title {
  font-size: 28rpx;
  line-height: 1.4;
  height: 80rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 12rpx;
  font-weight: 500;
  color: #333333;
}

.course-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #8E8E93;
  margin-bottom: 12rpx;
}

.course-rating {
  color: #FF9500;
  font-weight: 600;
  display: flex;
  align-items: center;
}

.course-price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #F0F0F5;
  padding-top: 12rpx;
}

.course-price {
  color: #FF3B30;
  font-size: 34rpx;
  font-weight: 600;
}

.course-original-price {
  color: #8E8E93;
  font-size: 22rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.course-free-tag {
  color: #34C759;
  font-size: 30rpx;
  font-weight: 600;
}

.student-count {
  color: #8E8E93;
  font-size: 22rpx;
  display: flex;
  align-items: center;
}

.cart-btn {
  background-color: #3D5AFE;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  box-shadow: 0 4rpx 10rpx rgba(61, 90, 254, 0.3);
  transition: all 0.3s;
}

/* 加载更多 */
.loading {
  text-align: center;
  padding: 30rpx;
  color: #8E8E93;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.no-more {
  text-align: center;
  padding: 30rpx;
  color: #8E8E93;
  font-size: 26rpx;
  position: relative;
}

.no-more::before, .no-more::after {
  content: '';
  position: absolute;
  height: 1px;
  width: 80rpx;
  background: #DDDDDD;
  top: 50%;
}

.no-more::before {
  left: calc(50% - 180rpx);
}

.no-more::after {
  right: calc(50% - 180rpx);
} 