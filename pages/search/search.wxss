.container {
  padding: 0;
  background-color: #f6f6f6;
  min-height: 100vh;
}

/* 搜索框 */
.search-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 8px 16px;
  background-color: #3366cc;
}

.search-box {
  flex: 1;
  height: 36px;
  background-color: #fff;
  border-radius: 18px;
  display: flex;
  align-items: center;
  padding: 0 12px;
}

.search-input {
  flex: 1;
  height: 100%;
  margin: 0 8px;
  font-size: 14px;
}

.cancel-btn {
  font-size: 14px;
  color: #fff;
  margin-left: 12px;
}

/* 搜索历史 */
.history-container {
  padding: 16px;
  background-color: #fff;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.history-title {
  font-size: 14px;
  font-weight: bold;
  color: #333;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
}

.history-item {
  background-color: #f0f0f0;
  padding: 6px 12px;
  border-radius: 16px;
  margin-right: 8px;
  margin-bottom: 8px;
  font-size: 12px;
  color: #666;
}

/* 搜索结果 */
.result-container {
  background-color: #fff;
  margin-top: 8px;
}

/* 空状态提示 */
.empty-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120px;
  color: #999;
  font-size: 14px;
}
