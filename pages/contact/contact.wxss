.container {
  padding: 30rpx;
  background-color: #f6f7fb;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  background-color: #2b5cff;
  color: #fff;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(43, 92, 255, 0.2);
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 通用区块样式 */
.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  width: 8rpx;
  height: 36rpx;
  background-color: #2b5cff;
  border-radius: 4rpx;
}

/* 联系信息部分 */
.contact-list {
  margin-bottom: 30rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9ff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.contact-item:active {
  background-color: #e8eaff;
}

.contact-icon {
  margin-right: 20rpx;
  color: #2b5cff;
  font-size: 40rpx;
  width: 60rpx;
  text-align: center;
}

.contact-info {
  flex: 1;
}

.contact-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.contact-action {
  font-size: 24rpx;
  color: #2b5cff;
  background-color: rgba(43, 92, 255, 0.1);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
}

/* 地图部分 */
.contact-map-container {
  margin-top: 40rpx;
}

.map-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.contact-map {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.map-action {
  text-align: center;
  font-size: 28rpx;
  color: #2b5cff;
  background-color: #f0f2ff;
  padding: 16rpx 0;
  border-radius: 40rpx;
}

.map-action:active {
  background-color: #e8eaff;
}

/* 表单样式 */
.form-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  line-height: 1.6;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-label.required::before {
  content: "*";
  color: #ff4d4f;
  margin-right: 8rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f9ff;
  border-radius: 8rpx;
  border: 2rpx solid #eaeaea;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  background-color: #f8f9ff;
  border-radius: 8rpx;
  border: 2rpx solid #eaeaea;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #e0e0e0;
  color: #999;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn.active {
  background-color: #2b5cff;
  color: #fff;
}

.form-tips {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.form-tips .required::before {
  content: "*";
  color: #ff4d4f;
  margin-right: 8rpx;
}

/* 服务时间部分 */
.hours-content {
  background-color: #f8f9ff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.hours-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eaeaea;
}

.hours-item:last-child {
  border-bottom: none;
}

.hours-day {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.hours-time {
  font-size: 28rpx;
  color: #666;
} 