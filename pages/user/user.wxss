/* 添加字体图标 */
@font-face {
  font-family: 'iconfont';
  src: url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 28rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  margin-right: 6rpx;
  display: inline-block;
}

.icon-star:before {
  content: "\e61a";
  color: #FF9500;
}

.icon-user:before {
  content: "\e60a";
  color: #8E8E93;
}

.icon-teacher:before {
  content: "\e602";
  color: #8E8E93;
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.5s ease-out forwards;
  opacity: 0;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 容器 */
.container {
  padding: 0 0 40rpx 0;
  background-color: #F5F7FA;
}

/* 用户信息 */
.user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 50rpx 30rpx;
  background: linear-gradient(135deg, #3D5AFE, #651FFF);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(61, 90, 254, 0.2);
  position: relative;
  overflow: hidden;
}

.user-info::after {
  content: '';
  position: absolute;
  right: -80rpx;
  top: -80rpx;
  width: 320rpx;
  height: 320rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  z-index: 1;
}

.user-info::before {
  content: '';
  position: absolute;
  left: -60rpx;
  bottom: -120rpx;
  width: 260rpx;
  height: 260rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
  z-index: 1;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 2;
  background-color: rgba(255, 255, 255, 0.15);
}

.user-name {
  font-size: 42rpx;
  font-weight: 600;
  position: relative;
  z-index: 2;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.login-btn {
  background-color: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  color: #ffffff;
  font-size: 30rpx;
  padding: 10rpx 40rpx;
  border-radius: 40rpx;
  margin: 0;
  line-height: 1.5;
  position: relative;
  z-index: 2;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.login-btn-hover {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.3);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 学习数据统计 */
.study-stats {
  display: flex;
  background-color: #ffffff;
  padding: 30rpx 0;
  margin-bottom: 24rpx;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 10rpx;
  background: linear-gradient(135deg, #3D5AFE, #651FFF);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.stat-label {
  font-size: 24rpx;
  color: #8E8E93;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background-color: #F0F0F5;
  margin: auto 0;
}

/* 菜单卡片 */
.menu-card {
  background-color: #ffffff;
  margin: 0 24rpx 24rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  padding: 30rpx;
  border-bottom: 2rpx solid #F5F7FA;
  position: relative;
  padding-left: 60rpx;
  color: #333333;
}

.menu-title::before {
  content: '';
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(to bottom, #3D5AFE, #651FFF);
  border-radius: 4rpx;
}

/* 网格菜单 */
.menu-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
}

.grid-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  position: relative;
  transition: all 0.3s;
}

.grid-item-hover {
  transform: scale(0.95);
  opacity: 0.8;
}

.grid-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
  position: relative;
  transition: all 0.3s;
}

.grid-label {
  font-size: 26rpx;
  color: #333333;
}

.badge {
  position: absolute;
  top: 0;
  right: 30%;
  background: linear-gradient(135deg, #FF3B30, #FF9500);
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 24rpx;
  min-width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  padding: 0 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(255, 59, 48, 0.3);
  font-weight: 500;
  z-index: 3;
}

/* 菜单列表 */
.menu-list {
  background-color: #ffffff;
}

.menu-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #F5F7FA;
  transition: all 0.3s;
}

.menu-item-hover {
  background-color: #F5F7FA;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 30rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
}

.arrow-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.3;
  transition: all 0.3s;
}

.menu-item-hover .arrow-icon {
  transform: translateX(4rpx);
  opacity: 0.5;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx;
  color: #8E8E93;
  font-size: 24rpx;
}
