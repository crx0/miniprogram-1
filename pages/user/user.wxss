/* 添加字体图标 */
@font-face {
  font-family: 'iconfont';
  src: url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 28rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  margin-right: 6rpx;
  display: inline-block;
}

.icon-star:before {
  content: "\e61a";
  color: #FF9500;
}

.icon-user:before {
  content: "\e60a";
  color: #8E8E93;
}

.icon-teacher:before {
  content: "\e602";
  color: #8E8E93;
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.5s ease-out forwards;
  opacity: 0;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 全局响应式调整 */
page {
  --safe-area-inset-top: env(safe-area-inset-top);
  --safe-area-inset-bottom: env(safe-area-inset-bottom);
  font-size: calc(14px + 0.1vmin);
  box-sizing: border-box;
}

/* 容器 */
.container {
  padding: 0 0 calc(40rpx + var(--safe-area-inset-bottom));
  background-color: #F5F7FA;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 用户信息 */
.user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: calc(50rpx + var(--safe-area-inset-top)) calc(30rpx + 1vmin);
  background: linear-gradient(135deg, #3D5AFE, #651FFF);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(61, 90, 254, 0.2);
  position: relative;
  overflow: hidden;
}

.user-info::after {
  content: '';
  position: absolute;
  right: -80rpx;
  top: -80rpx;
  width: 320rpx;
  height: 320rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  z-index: 1;
}

.user-info::before {
  content: '';
  position: absolute;
  left: -60rpx;
  bottom: -120rpx;
  width: 260rpx;
  height: 260rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
  z-index: 1;
}

.user-avatar {
  width: calc(140rpx + 1vmin);
  height: calc(140rpx + 1vmin);
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  margin-right: calc(30rpx + 0.5vmin);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 2;
  background-color: rgba(255, 255, 255, 0.15);
}

.user-name {
  font-size: calc(40rpx + 0.3vmin);
  font-weight: 600;
  position: relative;
  z-index: 2;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.login-btn {
  background-color: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  color: #ffffff;
  font-size: calc(28rpx + 0.2vmin);
  padding: calc(10rpx + 0.2vmin) calc(40rpx + 0.5vmin);
  border-radius: 40rpx;
  margin: 0;
  line-height: 1.5;
  position: relative;
  z-index: 2;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.login-btn-hover {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.3);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 学习数据统计 */
.study-stats {
  display: flex;
  background-color: #ffffff;
  padding: calc(30rpx + 1vmin) 0;
  margin-bottom: calc(24rpx + 1vmin);
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.stat-number {
  font-size: calc(46rpx + 0.5vmin);
  font-weight: 600;
  color: #333333;
  margin-bottom: 10rpx;
  background: linear-gradient(135deg, #3D5AFE, #651FFF);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.stat-label {
  font-size: calc(24rpx + 0.1vmin);
  color: #8E8E93;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background-color: #F0F0F5;
  margin: auto 0;
}

/* 菜单卡片 */
.menu-card {
  background-color: #ffffff;
  margin: 0 calc(24rpx + 0.5vmin) calc(24rpx + 1vmin);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

.menu-title {
  font-size: calc(32rpx + 0.2vmin);
  font-weight: 600;
  padding: calc(30rpx + 0.5vmin);
  border-bottom: 2rpx solid #F5F7FA;
  position: relative;
  padding-left: 60rpx;
  color: #333333;
}

.menu-title::before {
  content: '';
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(to bottom, #3D5AFE, #651FFF);
  border-radius: 4rpx;
}

/* 网格菜单 */
.menu-grid {
  display: flex;
  flex-wrap: wrap;
  padding: calc(20rpx + 0.5vmin) 0;
}

.grid-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: calc(30rpx + 0.5vmin) 0;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.grid-item-hover {
  transform: scale(0.95);
  opacity: 0.8;
}

.grid-icon {
  width: calc(80rpx + 0.5vmin);
  height: calc(80rpx + 0.5vmin);
  margin-bottom: 16rpx;
  position: relative;
  transition: all 0.3s;
}

.grid-label {
  font-size: calc(26rpx + 0.1vmin);
  color: #333333;
}

.badge {
  position: absolute;
  top: 0;
  right: 30%;
  background: linear-gradient(135deg, #FF3B30, #FF9500);
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 24rpx;
  min-width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  box-shadow: 0 2rpx 6rpx rgba(255, 59, 48, 0.3);
}

/* 列表菜单 */
.menu-list {
  padding: 0 calc(20rpx + 0.5vmin);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: calc(26rpx + 0.5vmin) calc(10rpx + 0.5vmin);
  border-bottom: 1rpx solid #F5F7FA;
  transition: all 0.3s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon-box {
  width: calc(56rpx + 0.5vmin);
  height: calc(56rpx + 0.5vmin);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: calc(24rpx + 0.5vmin);
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-item-icon {
  width: calc(36rpx + 0.5vmin);
  height: calc(36rpx + 0.5vmin);
}

.menu-item-text {
  font-size: calc(28rpx + 0.2vmin);
  color: #333333;
}

.menu-item-right {
  display: flex;
  align-items: center;
}

.menu-item-value {
  font-size: calc(26rpx + 0.1vmin);
  color: #8E8E93;
  margin-right: 12rpx;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #C8C8CC;
  border-right: 2rpx solid #C8C8CC;
  transform: rotate(45deg);
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: calc(30rpx + 1vmin) 0;
  color: #8E8E93;
  font-size: calc(22rpx + 0.1vmin);
}

/* 退出登录按钮 */
.logout-btn {
  width: calc(60% + 5vmin);
  height: calc(90rpx + 1vmin);
  line-height: calc(90rpx + 1vmin);
  background: linear-gradient(135deg, #FF3B30, #FF9500);
  color: #ffffff;
  border-radius: 45rpx;
  text-align: center;
  margin: calc(40rpx + 1vmin) auto;
  font-size: calc(30rpx + 0.2vmin);
  font-weight: 500;
  box-shadow: 0 8rpx 16rpx rgba(255, 59, 48, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.logout-btn-hover {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(255, 59, 48, 0.15);
}

/* 小屏适配 */
@media screen and (max-width: 375px) {
  .user-avatar {
    width: 120rpx;
    height: 120rpx;
  }
  
  .user-name {
    font-size: 38rpx;
  }
  
  .stat-number {
    font-size: 42rpx;
  }
  
  .stat-label {
    font-size: 22rpx;
  }
  
  .grid-item {
    padding: 24rpx 0;
  }
  
  .grid-icon {
    width: 70rpx;
    height: 70rpx;
  }
  
  .grid-label {
    font-size: 24rpx;
  }
}

/* 大屏适配 */
@media screen and (min-width: 768px) {
  .menu-card {
    max-width: 700rpx;
    margin: 0 auto 24rpx;
  }
  
  .menu-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
  }
  
  .grid-item {
    width: 100%;
  }
  
  .study-stats {
    max-width: 700rpx;
    margin: 0 auto 24rpx;
  }
  
  .logout-btn {
    max-width: 400rpx;
  }
}

/* 可访问性增强 */
@media (prefers-reduced-motion: reduce) {
  .user-info,
  .grid-item,
  .menu-item,
  .logout-btn {
    transition: none !important;
  }
  
  .fade-in {
    animation: none !important;
    opacity: 1;
    transform: none;
  }
}
