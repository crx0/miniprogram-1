/* 页面容器 */
.container {
  padding: 0 0 40rpx;
  background-color: #F5F7FA;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  background-color: #3D5AFE;
  padding: calc(60rpx + var(--safe-area-inset-top)) 40rpx 40rpx;
  color: #FFFFFF;
  position: relative;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 16rpx rgba(61, 90, 254, 0.15);
  width: 100%;
  box-sizing: border-box;
}

.header-content {
  position: relative;
  z-index: 2;
  width: 100%;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  max-width: 80%;
}

.page-header::after {
  content: "";
  position: absolute;
  right: -100rpx;
  top: -100rpx;
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  z-index: 1;
}

.page-header::before {
  content: "";
  position: absolute;
  left: -50rpx;
  bottom: -80rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.08);
  z-index: 1;
}

/* 分类导航 */
.category-nav {
  background-color: #FFFFFF;
  padding: 10rpx 0;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
  position: sticky;
  top: 0;
  z-index: 100;
}

.category-scroll {
  white-space: nowrap;
  padding: 20rpx 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.category-item {
  display: inline-block;
  padding: 16rpx 30rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
  border-radius: 8rpx;
}

.category-item.active {
  color: #3D5AFE;
  font-weight: bold;
}

.category-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #3D5AFE;
  border-radius: 3rpx;
}

.category-item-hover {
  background-color: rgba(0, 0, 0, 0.05);
}

/* 服务列表 */
.service-list {
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
}

.service-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
  overflow: hidden;
  transition: all 0.3s;
  width: 100%;
  box-sizing: border-box;
}

.service-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.service-icon-container {
  background: linear-gradient(135deg, #3D5AFE, #651FFF);
  padding: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.service-icon {
  width: 120rpx;
  height: 120rpx;
}

.service-content {
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.service-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.service-category {
  font-size: 24rpx;
  color: #3D5AFE;
  background-color: rgba(61, 90, 254, 0.1);
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.service-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
  text-align: justify;
}

.service-features {
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.feature-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #3D5AFE;
  padding-left: 16rpx;
}

.feature-list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  width: 50%;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #666;
  box-sizing: border-box;
  padding-right: 10rpx;
}

.feature-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #3D5AFE;
  margin-right: 12rpx;
  flex-shrink: 0;
  margin-top: 8rpx;
}

.service-action {
  display: flex;
  justify-content: flex-end;
  width: 100%;
  box-sizing: border-box;
}

.action-button {
  background-color: #3D5AFE;
  color: #FFFFFF;
  padding: 16rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}

.action-button:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 合作流程 */
.process-section {
  background-color: #FFFFFF;
  padding: 40rpx 30rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
  position: relative;
}

.section-title::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: -16rpx;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #3D5AFE;
  border-radius: 3rpx;
}

.process-steps {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 60rpx;
  flex-wrap: wrap;
  width: 100%;
  box-sizing: border-box;
}

.process-step {
  width: 23%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  position: relative;
  box-sizing: border-box;
}

.step-number {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #3D5AFE;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 2;
}

.step-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.step-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.step-line {
  position: absolute;
  top: 40rpx;
  left: 50%;
  width: 100%;
  height: 2rpx;
  background-color: #e0e0e0;
}

.process-step:first-child .step-line {
  left: 50%;
  width: 50%;
}

.process-step:last-child .step-line {
  width: 50%;
  right: 50%;
  left: auto;
}

/* 服务优势 */
.advantages-section {
  background-color: #FFFFFF;
  padding: 40rpx 30rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.advantages-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.advantage-item {
  width: 50%;
  display: flex;
  margin-bottom: 40rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.advantage-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(61, 90, 254, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.advantage-icon image {
  width: 40rpx;
  height: 40rpx;
}

.advantage-content {
  flex: 1;
}

.advantage-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.advantage-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 联系我们 */
.contact-section {
  background-color: #FFFFFF;
  padding: 40rpx 30rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.contact-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: center;
  margin-bottom: 40rpx;
}

.contact-button {
  background-color: #3D5AFE;
  color: #FFFFFF;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
  width: 80%;
  margin: 0 auto;
}

.contact-button:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 小屏幕适配 */
@media screen and (max-width: 375px) {
  .process-step {
    width: 48%;
    margin-bottom: 40rpx;
  }
  
  .step-line {
    display: none;
  }
  
  .advantage-item {
    width: 100%;
  }
  
  .feature-item {
    width: 100%;
  }
  
  .header-title {
    font-size: 36rpx;
  }
  
  .header-subtitle {
    font-size: 26rpx;
  }
  
  .service-icon {
    width: 100rpx;
    height: 100rpx;
  }
  
  .service-title {
    font-size: 32rpx;
  }
  
  .section-title {
    font-size: 32rpx;
  }
  
  .contact-button {
    width: 100%;
  }
} 