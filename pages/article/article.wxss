/* 容器 */
.container {
  padding: 0;
  width: 100%;
  background-color: #fff;
  padding-bottom: 60px; /* 底部操作栏高度 */
}

/* 文章头部 */
.article-header {
  padding: 20px 16px;
  border-bottom: 1px solid #f0f0f0;
}

.article-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 12px;
  line-height: 1.4;
}

.article-info {
  font-size: 12px;
  color: #999;
  display: flex;
  flex-wrap: wrap;
}

.article-info text {
  margin-right: 16px;
}

/* 文章内容 */
.article-content {
  padding: 16px;
  font-size: 16px;
  line-height: 1.8;
  color: #333;
}

.article-content image {
  max-width: 100%;
  height: auto;
  margin: 16px 0;
}

/* 文章统计 */
.article-stats {
  padding: 16px;
  display: flex;
  border-bottom: 8px solid #f6f6f6;
}

.stats-item {
  display: flex;
  align-items: center;
  margin-right: 24px;
  font-size: 12px;
  color: #999;
}

.stats-item icon {
  margin-right: 4px;
}

.stats-item icon.active {
  color: #3366cc;
}

/* 相关推荐 */
.related-news {
  padding: 16px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 16px;
  position: relative;
  padding-left: 12px;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4px;
  height: 16px;
  background-color: #3366cc;
  border-radius: 2px;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  background-color: #fff;
  display: flex;
  align-items: center;
  border-top: 1px solid #f0f0f0;
  z-index: 100;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: #666;
  position: relative;
}

.action-item icon {
  font-size: 18px;
  margin-bottom: 2px;
}

.action-item icon.active {
  color: #3366cc;
}

.share-btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
} 