.container {
  padding: 0;
  background-color: #f6f6f6;
  min-height: 100vh;
}

/* 页面标题 */
.header {
  background-color: #fff;
  padding: 16px;
  font-size: 16px;
  font-weight: bold;
  border-bottom: 1px solid #f0f0f0;
}

/* 新闻列表 */
.news-list {
  background-color: #fff;
  margin-top: 8px;
}

/* 空状态提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64px 16px;
  color: #999;
  font-size: 14px;
}

.empty-image {
  width: 120px;
  height: 120px;
  margin-bottom: 16px;
}

/* 底部按钮 */
.bottom-btn {
  padding: 24px 16px;
}

.clear-btn {
  background-color: #f2f2f2;
  color: #666;
  font-size: 14px;
  border-radius: 4px;
}



